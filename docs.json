{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Passionfruit Docs",
  "colors": {
    "primary": "#0C0C0B",
    "light": "#F0F0F0",
    "dark": "#000000"
  },
  "appearance": {
    "default": "light",
    "dark": true,
    "light": true
  },
  
  "background": {
    "color": {
      "dark": "#0C0C0B",
      "light": "#FCFCF9"
    }
  },
  "style": {
    "border": {
      "dark": "#2D2D2D",
      "light": "#202020"
    },
    "hover": {
      "dark": "#1A1A1A",
      "light": "#F0F0F0"
    }
  },
  "favicon": "/icons/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "icon": "book-open-cover",
        "groups": [
          {
            "group": "Get started",
            "icon": "rocket",
            "pages": ["start-guide", "concepts"]
          },
          {
            "group": "Installation",
            "icon": "download",
            "pages": ["installation/microsoft-addins"]
          },
          {
            "group": "Guides",
            "icon": "book",
            "pages": ["guides"]
          }
        ],
        "global": {
          "anchors": [
          
            {
              "anchor": "Community",
              "href": "https://mintlify.com/community",
              "icon": "slack"
            },
            {
              "anchor": "Blog",
              "href": "https://passionfruit.earth/blog",
              "icon": "newspaper"
            }
          ]
        }
      },
      {
        "tab": "Changelog",
        "icon": "list-check",
        "groups": [
          {
            "group": "Changelog",
            "icon": "clock-rotate-left",
            "pages": ["changelog"]
          }
        ]
      },
      {
        "tab": "Roadmap",
        "icon": "road",
        "groups": [
          {
            "group": "Roadmap",
            "icon": "map",
            "pages": ["roadmap"]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hello@passionfruit.earth"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.passionfruit.earth"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/passionfruit",
      "github": "https://github.com/passionfruit",
      "linkedin": "https://linkedin.com/company/passionfruit"
    }
  }
}